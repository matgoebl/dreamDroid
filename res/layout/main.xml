<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:id="@+id/LinearLayoutMain" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">
	
	<ScrollView
		android:id="@+id/ScrollViewMain"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent">
	
		<LinearLayout 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:orientation="vertical"		
			android:id="@+id/LinearLayoutTop" >
				
			<LinearLayout 
				android:id="@+id/LinearLayout1" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingTop="5dip">
				
				<Button
					android:id="@+id/ButtonServices"
					android:text="@string/services"		
					android:layout_width="fill_parent"
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_list" 
					android:layout_weight="1"/>
				<Button 
					android:id="@+id/ButtonMovies" 
					android:text="@string/movies" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_movie" 
					android:layout_weight="1" />	
			</LinearLayout>
			
			<LinearLayout 
				android:id="@+id/LinearLayout2" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				
				<Button
					android:id="@+id/ButtonTimer"
					android:text="@string/timer"		
					android:layout_width="fill_parent"
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_clock"
					android:layout_weight="1"/>	
				<Button 
					android:id="@+id/ButtonVirtualRemote" 
					android:text="@string/virtual_remote" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp" 
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_small_tiles" 
					android:layout_weight="1" />			
			</LinearLayout>	
			
			<LinearLayout 
				android:id="@+id/LinearLayout3" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				
				<Button 
					android:id="@+id/ButtonCurrent" 
					android:text="@string/current_service" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp" 
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_help" 
					android:layout_weight="1" />
				
				<Button 
					android:id="@+id/ButtonEpgSearch" 
					android:text="@string/epg_search" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp" 
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_search" 
					android:layout_weight="1" />
			</LinearLayout>
			<LinearLayout 
				android:id="@+id/LinearLayout4" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				
				<Button 
					android:id="@+id/ButtonPower" 
					android:text="@string/powercontrol" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:drawableLeft="@drawable/ic_menu_power_off" 
					android:layout_weight="1" />
				<Button 
					android:id="@+id/ButtonMediaplayer" 
					android:text="@string/mediaplayer" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical" 
					android:drawableLeft="@drawable/ic_menu_music" 
					android:layout_weight="1" />
			</LinearLayout>
			<LinearLayout 
				android:id="@+id/LinearLayout5"
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<Button 
					android:id="@+id/ButtonVolumeDown" 
					android:text="@string/volumedown" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:layout_weight="1" />
				<Button 
					android:id="@+id/ButtonVolumeUp" 
					android:text="@string/volumeup" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:layout_weight="1" />
				<Button 
					android:id="@+id/ButtonPlayPause" 
					android:text="@string/playpause" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:layout_weight="1" />
				<Button 
					android:id="@+id/ButtonChannelDown" 
					android:text="@string/channeldown" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:layout_weight="1" />
				<Button 
					android:id="@+id/ButtonChannelUp" 
					android:text="@string/channelup" 
					android:layout_width="fill_parent" 
					android:layout_height="65dp"
					android:layout_gravity="center_vertical"
					android:layout_weight="1" />
			</LinearLayout>
		</LinearLayout>	
	</ScrollView>	
</LinearLayout>
